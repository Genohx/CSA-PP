import java.util.Scanner;
import java.lang.Math;
public class MtoK
{
    public static void main(String args[])
    {
        Scanner keyboard = new Scanner(System.in);
        double message;
        double kilometers;
        
        System.out.print("Enter miles: ");
        message = keyboard.nextDouble();
        
        kilometers = 1.60935 * message;
        
        System.out.print("Amount in kilometers: " + kilometers);
    }//end method main
}//end class MtoK
